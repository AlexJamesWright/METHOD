	@$(CC)	$<	-c -I$(INC_DIR) -I$(RTFIND_INC_DIR)

IMEX2Args.o : $(MODULE_DIR)/IMEX2Args.cc $(INC_DIR)/IMEX2Args.h
	@$(CC)	$<	-c -I$(INC_DIR) -I$(RTFIND_INC_DIR)

