test_srrmhd : srrmhd.o test_srrmhd.o simData.o fluxVectorSplitting.o boundaryConds.o initFunc.o simulation.o weno.o platformEnv.o serialSaveData.o $(RTFIND_OBJS) gtest_main.a
	@$(CC)	$(CPPFLAGS) $(CXXFLAGS) -pthread $^ -o $@

# TwoFluidEMHD Model

